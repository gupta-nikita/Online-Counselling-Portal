@model PurdueUniversity.Models.User

@{
    ViewBag.Title = "Login Page";
}

<h3>Login</h3>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div>
        @Html.ValidationSummary(true,"",new { @class = "text-danger"})
        
        <div id="userName" style="margin-left:44%">
            @Html.TextBoxFor(model => model.UserName, new { @placeholder="userName", @style="text-align:center"})
            @Html.ValidationMessageFor(model => model.UserName, "")
        </div>

        <div id="password" style="margin-left:44%">
            @Html.PasswordFor(model => model.Password, new { @placeholder="password", @style = "text-align:center" })
            @Html.ValidationMessageFor(model => model.Password, "")
        </div>

        <div style="padding:3px;margin-left:48%">
            <input type="submit" id="login-btn" value="Login" class="btn btn-default" style="align-content:center"/>
        </div>

       
    </div>

}
