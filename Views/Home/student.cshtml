@model PurdueUniversity.Models.Appointment

@{
    ViewBag.Title = "student";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.AppointmentID)

    <div>   
        @Html.LabelFor(model => model.Date, "Please choose your preferred Date ")
        @Html.EditorFor(model => model.Date)
    </div>

    <div>
        @Html.LabelFor(model => model.Time, "Please choose your preferred Time ")
        @{ 
            List<SelectListItem> listItems = new List<SelectListItem>();
            listItems.Add(new SelectListItem {
                Text = "09:00 AM",
                Value = "09:00 AM"
            });
            listItems.Add(new SelectListItem
            {
                Text = "10:00 AM",
                Value = "10:00 AM"
            });
            listItems.Add(new SelectListItem
            {
                Text = "11:00 AM",
                Value = "11:00 AM"
            });
            listItems.Add(new SelectListItem
            {
                Text = "12:00 PM",
                Value = "12:00 PM"
            });
            listItems.Add(new SelectListItem
            {
                Text = "01:00 PM",
                Value = "01:00 PM"
            });
        }
        @Html.DropDownListFor(model => model.Time, listItems, "")
    </div>

    <div>
        <input id="checkbox" type="checkbox" />
        @Html.Label( "Click to add Text ")
    </div>

    <div id="textBoxArea" style="display: none">
        @Html.TextAreaFor(model => model.Text, new { cols = 35, @rows = 3 })
    </div>



        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" id=" submit-btn" class="btn btn-default" style="margin-left:45%" />
            </div>
        </div>
}

@section Scripts {

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@Scripts.Render("~/bundles/jqueryui")
@Scripts.Render("~/Content/cssjqryui")

    <script type="text/javascript">
        $('#checkbox').change(function () {
            if (this.checked)
            {
                $('#textBoxArea').show()
            }
            else
            {
                $('#textBoxArea').hide()
            }
        });
    </script>    
}


